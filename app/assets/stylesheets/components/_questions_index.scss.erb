// TITLE

.title {
  border-bottom: 1px solid $gray;
  width: 100%;
  border-top: 1px solid $gray;
  padding: 20px 0px;
  font-weight: bolder;
}


// SEARCH BAR


.index-search-bar {
  border-bottom: 1px solid $gray;
  padding: 20px 0px;
  h3 {
    margin: 5px;
  }
}


// FILTERS

.filters {
  border-bottom: 1px solid $gray;
  padding: 20px 0px;
  .list-inline > li {
    display: inline-block;
    padding-left: 20px;
    padding-right: 20px;
  }
  h3 {
    margin: 5px;
  }
}

// ASK NEW QUESTION

.ask-new-question {
  border-bottom: 1px solid $gray;
  padding: 20px 0px;
  h3 {
    margin: 5px;
  }
  .btn-new .big{
    margin: 5px !important;
    padding: 30px !important;
    font-size: 24px !important; }
}




// RESULTS

.results {
  display: flex;
  flex-direction: column;
  display: bloc;
}

// QUESTION CARD

.question-index-msg {
  width: 800px;
  padding: 20px;
  background-image: url("<%= asset_path 'front-card.svg' %>");
  background-position: center;
  background-size: cover;
  color: $white;
  margin-top: 30px;
  height: 400px;
  margin-left: 15%;
  position: relative;
}

.question-index-title {
  height: 60px;
  width: 780px;
  padding-top: 10px;
  h4 {
    overflow: hidden;
    // white-space: nowrap;
    text-overflow: ellipsis;
    overflow-wrap: break-word;
  }
}

.question-index-best-answer {
  height: 100px;
  margin-top: 30px;
  padding-top: 30px;
  border-top: 1px solid $white;
  width: 600px;
  margin-left: 10%;
  display: flex;
  align-items: center;
}

.question-index-answer {
  height: 100px;
  width: 600px;
  background: $white;
  color: $black;
  border-radius: 5px;
    p {
    overflow: hidden;
    // white-space: nowrap;
    text-overflow: ellipsis;
    overflow-wrap: break-word;
  }
}

// LINK


.question-show {
  position: absolute;
  z-index: 1;
  top: 0;
  bottom: 0;
  right: 0;
  width: 100%;
  opacity: 0;
}
