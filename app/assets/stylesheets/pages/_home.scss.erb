.video-container {
  // height: 100vh;
  // position: absolute;
  // z-index: -1;
  position: fixed;
  top: 50%;
  left: 50%;
  min-width: 100%;
  min-height: 100%;
  width: auto;
  height: auto;
  z-index: -100;
  transform: translate(-50%, -50%);
  video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
}

.video-with-filter {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

