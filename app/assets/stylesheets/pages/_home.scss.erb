.video-filter {
    background-image: radial-gradient(circle, rgba(145, 229, 255, 0.5), rgba(171, 233, 252, 0.5), rgba(194, 237, 250, 0.5), rgba(216, 241, 248, 0.5), rgba(237, 244, 246, 0.5));
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;

}

.wrapper {
  margin-top: 30px;
  padding: 30px;
}

.card-icon {
  margin: 0 auto;
  width: 240px;
  height: 240px;
  border-radius: 50%;
  text-align: center;

  padding: 50px;
  box-shadow: 1px 1px 3px #eaeaea;

  p {
    color: $blue;
  }
}



