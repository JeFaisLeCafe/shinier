<div class="background-img" style="  background-image: linear-gradient(-225deg, rgba(0,101,168,0.1) 0%, rgba(0,36,61,0.1) 50%), url('https://images.unsplash.com/photo-1516796181074-bf453fbfa3e6?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=4520a8fb1519f78738dbd64357638081&auto=format&fit=crop&w=1350&q=80');">

  <div class="form">

    <div class="form-title">
      <h2>Connexion</h2>
    </div>

    <div class="form-content">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, label: 'Ton email ?', placeholder: "mon@gmail.com" %>
          <%= f.input :password, required: false, label: 'Ton mot de passe ?', placeholder: "****" %>
          <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Je me connecte", class: "btn-form" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>

  </div>

</div>

