<div class="background-img" style="  background-image: linear-gradient(-225deg, rgba(0,101,168,0.1) 0%, rgba(0,36,61,0.1) 50%), url('https://images.unsplash.com/photo-1523872529804-569e03a845b6?ixlib=rb-0.3.5&s=1253ffb75d6d7d3bbcfa5352721a0270&auto=format&fit=crop&w=1350&q=80');">

        <div class="form">

          <div class="form-title">
            <h2>Inscription</h2>
          </div>

          <div class="form-content">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= f.error_notification %>

              <div class="form-inputs">
                <%= f.input :email, required: true, autofocus: true, placeholder: "votre@email.com" %>
                <%= f.input :password, required: true, placeholder: "mot de passe ****", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                <%= f.input :password_confirmation, required: true, placeholder: "mot de passe ****, à nouveau" %>
                <%= f.input :photo %>
                <%= f.input :photo_cache, as: :hidden %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Créer mon compte", class: "btn-form" %>
              </div>

              <%= render "devise/shared/links" %>
            <% end %>
          </div>
        </div>
</div>
