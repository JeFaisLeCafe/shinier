<%= @question.title %>
<%= @question.body %>
<%= link_to "answer", new_question_answer_path(@question) %>
<% if @question.useful? %>
  <%= "USEFULL" %>
<% else %>
  <%= "NOT USEFULL" %>
<% end %>
<% if @question.answered == false %>
  <%= link_to "is it solved?", question_path(@question, answered: true), method: :patch %>
<% else %>
  <%= "Solved" %>
<% end %>
<%= link_to 'Toggle', question_toggle_path(@question) %>
