<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="index-search-bar">
        <h3>Infinity Search Love</h3>

      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <div class="title">
        <h1>Questions & Top Réponses: </h1>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <div class="filters">
        <h3>Filtres </h3>
          <ul class="list-inline">
            <li class="btn-tertiary">Top Questions</li>
            <li class="btn-tertiary">Besoin de réponses</li>
            <li class="btn-tertiary">Le plus de votes</li>
          </ul>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="results">
      <% @questions.each do |question| %>
        <div class="col-xs-12">
          <div class="question-message">
            <div class="question-content">

              <div class="question-short">
                <div class="question-title">
                  <h4>Question : <%= question.title %></h4>
                </div>
                <div class="question-preview">
                  <p><%= question.body.first(100) %>...</p>
                </div>
              </div>

              <div class="answers">
                <div class="upvotes">
                  <div class="arrow"></div>
                  <div class="counter"><%= question.answers.count %></div>
                </div>
                <div class="top-answer">
                  <p>Meilleure réponse :</p>
                  <p><%= question.answers.first.body %></p>
                </div>
              </div>

            </div>
            <div class="link">
              <%= link_to question_path(question) do %>
                <i class="fas fa-plus-circle"></i>
              <% end %>
            </div>

          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>
