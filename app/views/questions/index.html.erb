<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="title">
        <h1>Questions & Réponses</h1>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <div class="index-search-bar">
        <h3>Recherche ta question</h3>

        <div class="row">
          <div class="col-xs-8 col-xs-offset-2">
            <div class="form-search">
              <span class="icon"><i class="fa fa-search"></i></span>
              <%= form_tag(questions_path, method: :get) do %>
                <%= text_field_tag :query, params[:query], class: 'form-control typeahead', id: "question_search"%>
                <%= submit_tag 'Shine!' , class: 'search-btn' %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <div class="filters">
              <h3>Filtres </h3>
                <ul class="list-inline">
                  <li>
                    <%= link_to "Top Questions", user_home_path, :class => "btn-tertiary" %>
                  </li>
                  <li class= "btn-tertiary">Proposer des réponses</li>
                  <li class="btn-tertiary">Le plus de votes</li>
                </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <%= link_to new_question_path do %>
        <li class="btn-new">Pose une nouvelle question</li>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="results">
      <% if @questions.blank? %>
        <h3>Oups, aucune question en rapport avec "<%= params[:query] %>" ne semble exister.</h3>
      <% else %>
          <% @questions.first(10).each do |question| %>

            <% top_answer = question.answers.sort_by do |answer| %>
              <% -answer.get_upvotes.size %>
            <% end %>

            <div class="col-xs-12">
              <div class="question-message">
                <a class="question-show" href="/questions/<%= question.id %>" ></a>
                <div class="question-content">

                  <div class="question-short">
                    <div class="question-title">
                      <h4>Question : <%= question.title %></h4>
                    </div>
                    <div class="resolue">
                      <% if current_user == question.user %>
                        <% if question.answered == false %>
                          <%= link_to 'Resolue?', question_toggle_path(question), class: "btn-tertiary" %>
                        <% else %>
                          <h4> <i class="fas fa-star"></i> &nbsp; Resolue!</h4>
                        <% end %>
                      <% else %>
                        <% if question.answered == false %>
                          <h4><i id="need" class="fas fa-ambulance"></i> &nbsp; Besoin de réponses !</h4>
                        <% else %>
                          <h4> <i class="fas fa-star"></i> &nbsp; Resolue!</h4>
                        <% end %>
                      <% end %>
                    </div>
                    <div class="question-preview">
                      <p><%= question.body.first(100) %>...</p>
                    </div>
                  </div>

                  <div class="answers">
                    <div class="upvotes">
                      <div class="arrow"></div>
                      <div class="counter">
                        <h4><%= top_answer.first.get_upvotes.size %></h4>
                        <%= link_to like_answer_path(top_answer), method: :put do %>
                          <i class="fas fa-hands-helping"></i>
                        <% end %>
                      </div>
                    </div>

                    <div class="top-answer">
                      <p>Meilleure réponse par <%= top_answer.first.user.firstname %> le <%= top_answer.first.created_at.strftime("%d/%m/%Y") %></p>
                      <p><%= top_answer.first.body %></p>
                      <p><em><%= link_to "Cette réponse te paraît inappropriée?", dislike_answer_path(top_answer), method: :put %></em></p>
                    </div>
                  </div>
                </div>
              <div class="link">
                <%= link_to question_path(question) do %>
                  <i class="fas fa-plus-circle"></i>
                <% end %>
              </div>
            </div>

          <% end %>
      <% end %>
    </div>
  </div>

</div>
