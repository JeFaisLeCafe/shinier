<div class="container">
  <div class="two-boxes personal">
    <div class="big-box">
      <%= link_to edit_user_path(current_user) do %>
        <i class="far fa-edit edit-tag"></i>
      <% end %>
      <div class="big-box-add">
        <%= cl_image_tag current_user.photo, height: 300, width: 400, crop: :fill, class: "card-avatar"%>
      </div>
      <div class="big-box-details">
        <%= form_for [@user] do |f|%>
          <h4>Hello <%= f.text_field :firstname, placeholder: "Ton prénom", value: "#{current_user.firstname}", class: "edit_form" %></h4>
          <p>Ville : <%= f.text_field :location, value: "#{current_user.location}", class: "edit_form" %></p>
          <p>Photo : <%= f.file_field :photo, class: "edit_form" %></p>
        <%= f.submit :submit, value: "enregistrer", class: "btn-tertiary"%>
        <% end %>
      </div>
    </div>

    <div class="small-box">
      <h4>Tes notifications</h4>
      <p>Tes questions en attente : </p>
      <p>Tes réponses : </p>
      <p>Ton statut : <%= current_user.status_in_community %> &nbsp;
        <i class="fas fa-bug <%= current_user.status_in_community %>"></i>
      </p>
    </div>
  </div>

  <div class="two-boxes inspiration">
    <div class="small-box">
      <i class="fas fa-star"></i>
      <h4>The way to get started is to quit talking and begin doing</h4>
      <p>- Walt Disney</p>
    </div>
    <div class="big-box texte-circles">
      <h4>To Do de la semaine</h4>
      <div class="circles">
        <div class="card-circle">
          <p>Réveil? <br> Teste sucre</br></p>
        </div>
        <div class="card-circle">
          <p>Petit dej? <br> Healthy!</br></p>
        </div>
        <div class="card-circle">
          <p>Sport? <br> 3X min! </br></p>
        </div>
        <div class="card-circle">
          <p>Médocs? <br> 0 oublis!</br></p>
        </div>
        <div class="card-circle">
          <p>Eau? <br> 3L par jour</br></p>
        </div>
      </div>
    </div>

  </div>

  <div class="two-boxes medical-data">
    <div class="big-box">
      <%= link_to edit_user_path(current_user) do %>
        <i class="far fa-edit edit-tag"></i>
      <% end %>
      <div class="big-box-add">
        <%= link_to "+", disease_path(current_user.disease), class: "btn-tertiary plus" %>
      </div>
      <div class="big-box-details">
        <h4>Tes infos sauvegardées <%= current_user.bio %></h4>
      </div>
    </div>

    <div class="small-box">
      <%= link_to edit_user_path(current_user) do %>
        <i class="far fa-edit edit-tag"></i>
      <% end %>
      <h4>Infos à rappeler</h4>
      <%= form_for @user do |f| %>
        <p>Ton numéro de sécu : <%= f.text_field :secu_nb, value: "#{current_user.secu_nb}", class: "edit_form" %></p>
        <p>Ton numéro de mutuelle : <%= f.text_field :mutuelle_nb, value: "#{current_user.mutuelle_nb}", class: "edit_form" %></p>
        <p>Ton médecin traintant : <%= f.text_field :my_doctor, value: "#{current_user.my_doctor}", class: "edit_form" %> </p>
      <% end %>
    </div>
  </div>

</div>
