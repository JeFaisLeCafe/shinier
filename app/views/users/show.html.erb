<div class="container">
  <div class="two-boxes personal">
    <div class="big-box">
      <%= link_to edit_user_path(current_user) do %>
        <i class="far fa-edit edit-tag"></i>
      <% end %>
      <div class="big-box-add">
        <%= cl_image_tag current_user.photo, height: 300, width: 400, crop: :fill, class: "card-avatar"%>
      </div>
      <div class="big-box-details">
        <h4>Hello <%= current_user.firstname %>!</h4>
        <p><i class="fas fa-map-marker-alt"></i> : <%= current_user.location %></p>
      </div>
    </div>

    <div class="small-box">
      <h4>Tes notifications</h4>
      <p>Tes questions en attente : <%= current_user.waiting_questions.size %></p>

      <%= render 'status_pic' %>
    </div>
  </div>

  <div class="two-boxes inspiration">
    <div class="small-box">
      <p><i class="fas fa-star"></i> Quote of the day</p>
      <h4><i class="fas fa-quote-left"></i> The way to get started is to quit talking and begin doing <i class="fas fa-quote-right"></i></h4>
      <p>- Walt Disney</p>
    </div>
    <div class="big-box texte-circles">
      <h4>Rappels de la semaine</h4>
      <div class="circles">
        <div class="card-circle">
          <p><i class="far fa-bell"></i> <br> Test sucre</br></p>
        </div>
        <div class="card-circle">
          <p><i class="fas fa-coffee"></i> <br> Healthy!</br></p>
        </div>
        <div class="card-circle">
          <p><i class="fas fa-walking"></i> <br> 30 min minimum! </br></p>
        </div>
        <div class="card-circle">
          <p><i class="fas fa-pills"></i> <br> 0 oubli!</br></p>
        </div>
        <div class="card-circle">
          <p><i class="fas fa-tint"></i> <br> 3L par jour!</br></p>
        </div>
      </div>
    </div>

  </div>

  <div class="two-boxes medical-data">
    <div class="big-box">
      <%= link_to edit_user_path(current_user) do %>
        <i class="far fa-edit edit-tag"></i>
      <% end %>
      <div class="big-box-add">
        <%= link_to "+", disease_path(current_user.disease), class: "btn-tertiary plus" %>
      </div>
      <div class="big-box-details">
        <h4>Tes infos sauvegardées</h4>
        <p><%= current_user.bio %></p>
      </div>
    </div>

    <div class="small-box">
      <%= link_to edit_user_path(current_user) do %>
        <i class="far fa-edit edit-tag"></i>
      <% end %>
      <h4>Infos à rappeler</h4>
      <p>Ton numéro de sécu : <%= current_user.secu_nb %> </p>
      <p>Ton numéro de mutuelle : <%= current_user.mutuelle_nb %></p>
      <p>Ton médecin traintant : <%= current_user.my_doctor %></p>
    </div>
  </div>

</div>
