<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="title">
        <h1>Hello</h1>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <div class="index-search-bar">
        <h3>Recherche ta question</h3>

        <div class="row">
          <div class="col-xs-8 col-xs-offset-2">
            <div class="form-search">
              <span class="icon"><i class="fa fa-search"></i></span>
              <%= form_tag(questions_path, method: :get) do %>
                <%= text_field_tag :query, params[:query], id:"search", placeholder: "Recherche..."%>
              <% end %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>


  <div class="row">
    <div class="results">
      <% @questions.each do |question| %>
        <div class="col-xs-12">
          <div class="question-message">
            <div class="question-content">

              <div class="question-short">
                <div class="question-title">
                  <h4>Question : <%= question.title %></h4>
                </div>
                <div class="question-preview">
                  <p><%= question.body.first(100) %>...</p>
                </div>
              </div>

              <div class="answers">
                <div class="upvotes">
                  <div class="arrow"></div>
                  <div class="counter"><%= question.answers.count %></div>
                </div>
                <div class="top-answer">
                  <p>Meilleure r√©ponse :</p>
                  <p><%= question.answers.first.body %></p>
                </div>
              </div>

            </div>
            <div class="link">
              <%= link_to question_path(question) do %>
                <i class="fas fa-plus-circle"></i>
              <% end %>
            </div>

          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>
