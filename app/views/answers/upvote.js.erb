

// select the arrow , and change it to another class
function refreshUpvote(olderClass, newClass) {
  const newUpvote = document.querySelectorAll('[data-answer-id="<%= @answer.id %>"]');
  newUpvote.forEach((upvote) => {
    console.log("titi", upvote.querySelector(".big-icon"))
    upvote.querySelector(".big-icon").classList.replace(olderClass, newClass)
  })
}

// select the counter and update it
function addUpvote(newCounter) {
  const upvotes = document.querySelectorAll('[data-answer-id="<%= @answer.id %>"]');
  upvotes.forEach((upvote) => {
    upvote.querySelector(".counter").innerHTML = newCounter
  })
}

addUpvote('<%= j render "answers/counter", answer: @answer %>')



